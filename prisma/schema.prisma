generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")   // The pooled URL (Port 6543)
  directUrl = env("DIRECT_URL")     // The direct URL (Port 5432)
}

// =========================
// DOCTORS
// =========================

model Doctor {
  id          String   @id @default(uuid())
  name        String
  specialty   String
  image       String?  // URL for their photo
  bio         String?  // Short description
  isActive    Boolean  @default(true)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // A doctor can have many appointments
  appointments AppointmentRequest[]
}

// =========================
// APPOINTMENT REQUESTS
// =========================

model AppointmentRequest {
  id             String            @id @default(uuid())
  fullName       String
  phone          String
  email          String?
  message        String?
  preferredDate  DateTime?
  status         AppointmentStatus @default(NEW)
  adminNotes     String?
  createdAt      DateTime          @default(now())

  // Link to a specific doctor
  doctorId       String?
  doctor         Doctor?            @relation(fields: [doctorId], references: [id])
}

// =========================
// CLINIC SETTINGS (SaaS Toggles & Branding)
// =========================

model ClinicSettings {
  id             String   @id @default("singleton") // Only one row ever exists
  clinicName     String   @default("Gulf Clinic")
  clinicLogo     String?  // URL for the navbar logo
  contactEmail   String?  // Email for notification routing
  whatsappNumber String?  // For the public WhatsApp redirect
  
  emailEnabled   Boolean  @default(false)
  aiEnabled      Boolean  @default(false)
  sheetsEnabled  Boolean  @default(false)
  
  updatedAt      DateTime @updatedAt
}

// =========================
// ADMINS
// =========================

model Admin {
  id                   String    @id @default(uuid())
  email                String    @unique
  passwordHash         String
  role                 AdminRole @default(ADMIN)
  isActive             Boolean   @default(true)

  // Login security
  failedLoginAttempts  Int       @default(0)
  lockedUntil          DateTime?

  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  activityLogs         AdminActivityLog[]
}

// =========================
// ADMIN ACTIVITY LOGS
// =========================

model AdminActivityLog {
  id        String   @id @default(uuid())
  adminId   String
  action    String
  targetId  String?
  createdAt DateTime @default(now())

  admin     Admin    @relation(fields: [adminId], references: [id], onDelete: Cascade)

  @@index([adminId])
}

// =========================
// ENUMS
// =========================

enum AppointmentStatus {
  NEW
  CONTACTED
  CLOSED
}

enum AdminRole {
  SUPER_ADMIN
  ADMIN
}